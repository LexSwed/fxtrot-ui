{
  "name": "@fxtrot/ui",
  "description": "UI library for Fxtrot initiatives",
  "version": "0.0.1",
  "license": "Apache-2.0",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "typings": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/LexSwed/fxtrot-ui"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --quiet --fix"
    ],
    "*.{json,md,mdx,html}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "build": "rm -rf ./dist && run-p build:*",
    "build:lib": "rollup -c",
    "build:types": "tsc --project tsconfig.lib.json",
    "dev": "yarn run dokz:dev",
    "lint": "next lint --dir pages --dir src",
    "typecheck": "tsc --noEmit",
    "dokz:dev": "next dev -p 3001",
    "dokz:build": "next build",
    "dokz:start": "next start",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "dependencies": {
    "@floating-ui/react-dom": "^0.6.0",
    "@radix-ui/react-collapsible": "^0.1.6",
    "@radix-ui/react-dialog": "^0.1.7",
    "@radix-ui/react-dropdown-menu": "^0.1.6",
    "@radix-ui/react-id": "^0.1.5",
    "@radix-ui/react-polymorphic": "^0.0.14",
    "@radix-ui/react-popover": "^0.1.6",
    "@radix-ui/react-portal": "^0.1.4",
    "@radix-ui/react-select": "^0.1.1",
    "@radix-ui/react-slot": "^0.1.1",
    "@radix-ui/react-toggle": "^0.1.4",
    "@radix-ui/react-toggle-group": "^0.1.5",
    "@radix-ui/react-visually-hidden": "^0.1.4",
    "@react-aria/focus": "^3.5.3",
    "@stitches/react": "^1.2.7",
    "jotai": "^1.6.1",
    "react-keyed-flatten-children": "^1.3.0",
    "react-uid": "^2.3.1"
  },
  "devDependencies": {
    "@chakra-ui/react": "^1.8.6",
    "@emotion/react": "^11.8.2",
    "@emotion/styled": "^11.8.1",
    "@heroicons/react": "^1.0.6",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "dokz": "2.0.10",
    "esbuild": "^0.14.25",
    "eslint": "8.10.0",
    "eslint-config-next": "^12.1.0",
    "eslint-config-react-app": "^7.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.3",
    "eslint-plugin-react-hooks": "^4.3.0",
    "framer-motion": "^6.2.8",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.5",
    "next": "^12.1.0",
    "npm-run-all": "^4.1.5",
    "pinst": "^3.0.0",
    "prettier": "^2.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "rollup": "^2.70.0",
    "rollup-plugin-esbuild": "^4.8.2",
    "typescript": "^4.6.2"
  },
  "peerDependencies": {
    "@heroicons/react": "^1.0.0",
    "@stitches/react": "^1.0.0",
    "framer-motion": "^4.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "files": [
    "dist",
    "src/lib"
  ],
  "keywords": [
    "react",
    "ui",
    "design-system",
    "react-components",
    "uikit",
    "accessible",
    "components",
    "library",
    "design-system"
  ],
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "quoteProps": "consistent"
  }
}
