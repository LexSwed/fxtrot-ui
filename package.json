{
  "name": "@fxtrot/ui",
  "description": "UI library for Fxtrot initiatives",
  "version": "0.0.1",
  "license": "Apache-2.0",
  "types": "dist/types/index.d.ts",
  "main": "./dist/fxtrot-ui.umd.js",
  "module": "./dist/fxtrot-ui.es.js",
  "exports": {
    ".": {
      "import": "./dist/fxtrot-ui.es.js",
      "require": "./dist/fxtrot-ui.umd.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/LexSwed/fxtrot-ui"
  },
  "scripts": {
    "build": "rm -rf ./dist && yarn build:lib && yarn build:types",
    "build:lib": "vite build",
    "build:types": "tsc --project tsconfig.lib.json",
    "dev": "yarn run docs:dev",
    "lint": "next lint --dir pages --dir src",
    "typecheck": "tsc --noEmit",
    "docs:dev": "next dev -p 3001",
    "docs:build": "next build",
    "docs:start": "next start",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --quiet --fix"
    ],
    "*.{json,md,mdx,html}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@radix-ui/react-collapsible": "next",
    "@radix-ui/react-dialog": "next",
    "@radix-ui/react-direction": "^0.1.0-rc.46",
    "@radix-ui/react-dropdown-menu": "next",
    "@radix-ui/react-id": "next",
    "@radix-ui/react-polymorphic": "^0.0.14",
    "@radix-ui/react-popover": "next",
    "@radix-ui/react-portal": "next",
    "@radix-ui/react-roving-focus": "next",
    "@radix-ui/react-select": "next",
    "@radix-ui/react-slot": "next",
    "@radix-ui/react-toggle": "next",
    "@radix-ui/react-toggle-group": "next",
    "@radix-ui/react-visually-hidden": "^0.1.5-rc.43",
    "react-keyed-flatten-children": "^1.3.0"
  },
  "devDependencies": {
    "@heroicons/react": "^1.0.6",
    "@mdx-js/loader": "^2.1.2",
    "@mdx-js/mdx": "^2.1.2",
    "@mdx-js/react": "^2.1.2",
    "@next/mdx": "^12.2.1",
    "@stitches/react": "^1.2.8",
    "@types/glob": "^7.2.0",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.4",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "eslint": "8.19.0",
    "eslint-config-next": "^12.2.1",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "glob": "^8.0.3",
    "gray-matter": "^4.0.3",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "lint-staged": "^13.0.3",
    "next": "^12.2.1",
    "next-seo": "^5.4.0",
    "pinst": "^3.0.0",
    "prettier": "^2.7.1",
    "prism-react-renderer": "^1.3.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.4.0",
    "react-live": "^2.4.1",
    "rehype-slug": "^5.0.1",
    "remark-frontmatter": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "remark-mdx-code-meta": "^1.0.0",
    "remark-mdx-frontmatter": "^2.0.2",
    "typescript": "^4.7.4",
    "vite": "^3.0.0"
  },
  "peerDependencies": {
    "@heroicons/react": "^1.0.6",
    "@stitches/react": "^1.2.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "files": [
    "dist",
    "src/lib"
  ],
  "keywords": [
    "react",
    "ui",
    "design-system",
    "react-components",
    "uikit",
    "accessible",
    "components",
    "library",
    "design-system"
  ],
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "quoteProps": "consistent"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ]
  }
}
