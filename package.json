{
  "name": "@fxtrot/ui",
  "description": "UI library for Fxtrot initiatives",
  "version": "0.0.1",
  "license": "Apache-2.0",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "typings": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/LexSwed/fxtrot-ui"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --quiet --fix"
    ],
    "*.{json,md,mdx,html}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "build": "rm -rf ./dist && run-p build:*",
    "build:lib": "rollup -c",
    "build:types": "tsc --project tsconfig.lib.json",
    "dev": "yarn run docs:dev",
    "lint": "next lint --dir pages --dir src",
    "typecheck": "tsc --noEmit",
    "docs:dev": "next dev -p 3001",
    "docs:build": "next build",
    "docs:start": "next start",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "dependencies": {
    "@floating-ui/react-dom": "^0.6.0",
    "@heroicons/react": "^1.0.6",
    "@radix-ui/react-collapsible": "^0.1.6",
    "@radix-ui/react-dialog": "^0.1.7",
    "@radix-ui/react-dropdown-menu": "^0.1.6",
    "@radix-ui/react-id": "^0.1.5",
    "@radix-ui/react-polymorphic": "^0.0.14",
    "@radix-ui/react-popover": "^0.1.6",
    "@radix-ui/react-portal": "^0.1.4",
    "@radix-ui/react-roving-focus": "^0.1.5",
    "@radix-ui/react-select": "^0.1.1",
    "@radix-ui/react-slot": "^0.1.1",
    "@radix-ui/react-toggle": "^0.1.4",
    "@radix-ui/react-toggle-group": "^0.1.5",
    "@radix-ui/react-visually-hidden": "^0.1.4",
    "jotai": "^1.6.1",
    "react-keyed-flatten-children": "^1.3.0",
    "react-uid": "^2.3.1"
  },
  "devDependencies": {
    "@mdx-js/loader": "^2.1.0",
    "@mdx-js/mdx": "^2.1.0",
    "@mdx-js/react": "^2.1.0",
    "@next/mdx": "^12.1.1",
    "@stitches/react": "^1.2.7",
    "@types/glob": "^7.2.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "esbuild": "^0.14.28",
    "eslint": "8.12.0",
    "eslint-config-next": "^12.1.1",
    "eslint-config-react-app": "^7.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "framer-motion": "^6.2.8",
    "glob": "^7.2.0",
    "gray-matter": "^4.0.3",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.6",
    "next": "^12.1.1",
    "npm-run-all": "^4.1.5",
    "pinst": "^3.0.0",
    "prettier": "^2.6.1",
    "prism-react-renderer": "^1.3.1",
    "react": "^18.0.0-rc.2",
    "react-dom": "^18.0.0-rc.2",
    "react-icons": "^4.3.1",
    "react-live": "^2.4.1",
    "rehype-slug": "^5.0.1",
    "remark-frontmatter": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "remark-mdx-code-meta": "^1.0.0",
    "remark-mdx-frontmatter": "^1.1.1",
    "rollup": "^2.70.1",
    "rollup-plugin-esbuild": "^4.8.2",
    "typescript": "^4.6.3"
  },
  "peerDependencies": {
    "@stitches/react": "^1.2.0",
    "framer-motion": "^6.0.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "files": [
    "dist",
    "src/lib"
  ],
  "keywords": [
    "react",
    "ui",
    "design-system",
    "react-components",
    "uikit",
    "accessible",
    "components",
    "library",
    "design-system"
  ],
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "quoteProps": "consistent"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ]
  }
}
